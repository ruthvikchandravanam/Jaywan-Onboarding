##########################################
#             DATABASE CONFIG            #
##########################################

DB_TYPE=mysql                 # Database type: mysql, postgres, etc.
DB_HOST=localhost             # Database host
DB_PORT=3306                  # Database port
DB_USERNAME=nts_user          # Database username
DB_PASSWORD=nts@12345         # Database password (consider using secrets in production)
DB_DATABASE=nts_tpse          # Database name

##########################################
#            ORM SETTINGS                 #
##########################################

DB_SYNCHRONIZE=true           # Auto-sync entities with DB (disable in production)
DB_LOGGING=false              # Enable SQL query logging

##########################################
#          CONNECTION POOL                #
##########################################

DB_CONNECTION_LIMIT=10        # Max simultaneous connections
DB_WAIT_FOR_CONNECTIONS=true  # Wait if no connection available
DB_QUEUE_LIMIT=0              # Max queued connection requests (0 = unlimited)

##########################################
#         CONNECTION RETRIES              #
##########################################

DB_RETRIES=3                  # Number of times to retry DB connection
DB_DELAY_MS=2000              # Delay (ms) between retries

##########################################
#          ENVIRONMENT TAG                #
##########################################

NODE_ENV=development          # Environment: development | production | test

##########################################
# OPTIONAL (ADVANCED) SETTINGS           #
##########################################

# DB_SSL=false                 # Set true if using SSL connections
# DB_SSL_CA=/path/to/ca.pem    # CA certificate path for SSL
# DB_CHARSET=utf8mb4           # MySQL charset (supports emojis)
